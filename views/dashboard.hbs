<!DOCTYPE HTML>
<html>
<head>
    <title>Welcome, Shopkeeper!</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/css/dash.css" />
</head>

<body>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Banner -->
        <section id="banner" class="major">
            <div class="inner">
                <header class="major">
                    <h1>Hi, my name is {{user.username}}</h1>
                </header>
                <div class="content">
                    <p>Some Slogan for the shop</p>
                </div>
            </div>
        </section>

        <!-- Contact -->
        <section id="contact">
            <div class="inner">
                <section>
                    <div class="table">
                        <table>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                            </tr>
                            <tr>
                                <td>Computer Graphics by Utkarsh Singh</td>
                                <td>5</td>
                            </tr>
                            <tr>
                                <td>Broomstick for Abhishek</td>
                                <td>100</td>
                            </tr>
                            <tr>
                                <td>Sprite by Deepesh</td>
                                <td>1000</td>
                            </tr>
                        </table>
                    </div>
                </section>
                <section class="split">
                    <section>
                        <div class="contact-method">
                            <span class="icon alt fa-phone"></span>
                            <h3>Phone</h3>
                            <span>(0175) 2506 3490</span>
                        </div>
                    </section>
                    <section>
                        <div class="contact-method">
                            <span class="icon alt fa-home"></span>
                            <h3>Address</h3>
                            <span>1234 Somewhere Road #5432<br />
                                Nashville, TN 00000<br />
                                United States of America</span>
                        </div>
                    </section>
                </section>
            </div>
        </section>

        <!-- Footer -->
        <footer id="footer">
            <div class="inner">
                <ul class="copyright">
                    <li>&copy; Shopedia</li>
                </ul>
            </div>
        </footer>

    </div>

    <!-- Scripts -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.scrolly.min.js"></script>
    <script src="/js/jquery.scrollex.min.js"></script>
    <script src="/js/browser.min.js"></script>
    <script src="/js/breakpoints.min.js"></script>
    <script src="/js/dashutil.js"></script>
    <script src="/js/dash.js"></script>

</body>

</html>